{
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "target": "esnext",
        "module": "commonjs",
        "baseUrl": "src"
    },
    "include": ["./src/**/*", "./tests/**/*", "./types/global.d.ts"],
    "exclude": ["node_modules"]
}
